@namespace ControlPeso.Web.Components.Shared

<MudCard Elevation="2" Class="pa-4">
    <MudCardContent>
        <div class="d-flex justify-space-between align-center">
            <div style="flex: 1;">
                <MudText Typo="Typo.body2" Color="Color.Default" Class="mb-2">
                    @Title
                </MudText>
                <MudText Typo="Typo.h4" Class="font-weight-bold">
                    @FormattedValue
                </MudText>
                
                @if (ShowTrend && TrendValue != 0)
                {
                    <MudChip T="string"
                             Size="Size.Small" 
                             Color="@GetTrendColor()"
                             Class="mt-3">
                        @GetTrendIcon() @Math.Abs(TrendValue).ToString("0.0") @Unit
                    </MudChip>
                }
            </div>
            <div>
                <MudIcon Icon="@Icon" 
                         Color="@Color" 
                         Size="Size.Large" 
                         Style="font-size: 3rem;" />
            </div>
        </div>
    </MudCardContent>
</MudCard>
