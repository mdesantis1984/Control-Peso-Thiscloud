    <MudGrid Spacing="6">
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="0" Class="feature-card">
                <MudStack Spacing="3" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Speed" 
                             Color="Color.Success" 
                             Class="feature-icon" />
                    <MudText Typo="Typo.h5" Class="feature-title">
                        Registro Rápido
                    </MudText>
                    <MudText Typo="Typo.body1" 
                             Align="Align.Center" 
                             Class="feature-description">
                        Añade tu peso en segundos con una interfaz intuitiva y fluida
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
