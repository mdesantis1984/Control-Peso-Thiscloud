@page "/"

<PageTitle>Control Peso Thiscloud - Seguimiento de Peso Corporal Simple y Efectivo</PageTitle>

<HeadContent>
    <meta name="description" content="Control Peso Thiscloud es una aplicación web gratuita para registrar y analizar tu peso corporal. Dashboard con métricas, gráficos de evolución, análisis de tendencias y proyecciones." />
    <meta name="keywords" content="control peso, seguimiento peso, registro peso, app peso, gráfico peso, análisis peso, IMC, tendencias peso, peso corporal" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://controlpeso.thiscloud.com.ar/" />

    @* Open Graph *@
    <meta property="og:title" content="Control Peso Thiscloud - Seguimiento de Peso Corporal" />
    <meta property="og:description" content="Aplicación web gratuita para registrar y analizar tu peso corporal con dashboard, gráficos y análisis de tendencias." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://controlpeso.thiscloud.com.ar/" />
    <meta property="og:image" content="https://controlpeso.thiscloud.com.ar/images/og-image.png" />

    @* Twitter Card *@
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Control Peso Thiscloud - Seguimiento de Peso Corporal" />
    <meta name="twitter:description" content="Aplicación web gratuita para registrar y analizar tu peso corporal." />
    <meta name="twitter:image" content="https://controlpeso.thiscloud.com.ar/images/og-image.png" />

    <style>
        /* Hero section - SIMPLIFIED (no complex animations) */
        .hero-section {
            background: linear-gradient(135deg, #1e3a8a15 0%, #7e22ce15 100%);
            border-radius: 16px;
            padding: 80px 40px;
            margin-bottom: 48px;
        }

        .hero-icon {
            font-size: 64px !important;
            margin-bottom: 24px;
            color: var(--mud-palette-primary);
        }

        .hero-title {
            font-size: 3rem !important;
            font-weight: 700 !important;
            line-height: 1.2 !important;
            margin-bottom: 16px !important;
            color: var(--mud-palette-primary);
        }

        .hero-subtitle {
            font-size: 1.25rem !important;
            font-weight: 400 !important;
            opacity: 0.8;
            margin-bottom: 32px !important;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .hero-cta {
            padding: 12px 32px !important;
            font-size: 1rem !important;
            border-radius: 8px !important;
        }

        /* Feature cards - SIMPLIFIED */
        .feature-card {
            border-radius: 12px !important;
            padding: 32px 24px !important;
            height: 100%;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .feature-icon {
            font-size: 48px !important;
            margin-bottom: 16px !important;
        }

        .feature-title {
            font-size: 1.25rem !important;
            font-weight: 600 !important;
            margin-bottom: 12px !important;
        }

        .feature-description {
            font-size: 0.95rem !important;
            line-height: 1.6 !important;
            opacity: 0.7;
        }

        /* Stats badge */
        .stats-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            border-radius: 50px;
            background: rgba(76, 175, 80, 0.15);
            color: #4caf50;
            font-size: 0.875rem;
            font-weight: 600;
            margin-top: 16px;
        }

        /* Responsive */
        @@media (max-width: 960px) {
            .hero-section {
                padding: 60px 24px;
            }

            .hero-title {
                font-size: 2rem !important;
            }

            .hero-subtitle {
                font-size: 1.1rem !important;
            }

            .feature-card {
                padding: 24px 20px !important;
            }
        }
    </style>
</HeadContent>

@* Hero Section *@
<div class="hero-section">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudStack Spacing="4" AlignItems="AlignItems.Center" Class="text-center">
            <MudIcon Icon="@Icons.Material.Filled.MonitorWeight" 
                     Class="hero-icon" />

            <MudText Class="hero-title">
                Control Peso Thiscloud
            </MudText>

            <MudText Class="hero-subtitle">
                Seguimiento inteligente de tu peso corporal con análisis en tiempo real
            </MudText>

            <AuthorizeView>
                <Authorized>
                    <MudButton Variant="Variant.Filled" 
                               Color="Color.Primary" 
                               Size="Size.Large"
                               Href="/dashboard"
                               StartIcon="@Icons.Material.Filled.Dashboard"
                               Class="hero-cta">
                        Ir al Dashboard
                    </MudButton>
                </Authorized>
                <NotAuthorized>
                    <MudButton Variant="Variant.Filled" 
                               Color="Color.Primary" 
                               Size="Size.Large"
                               Href="/login"
                               StartIcon="@Icons.Material.Filled.Login"
                               Class="hero-cta">
                        Comenzar Ahora
                    </MudButton>
                </NotAuthorized>
            </AuthorizeView>

            <div class="stats-badge">
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Size="Size.Small" />
                <span>100% Gratuito · Privado · Seguro</span>
            </div>
        </MudStack>
    </MudContainer>
</div>

@* Features Section *@
