@page "/login"
@layout MainLayout

<PageTitle>Iniciar Sesión - Control Peso Thiscloud</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center justify-center" Style="min-height: 100vh;">
    <MudPaper Elevation="4" Class="pa-8" Style="width: 100%; max-width: 450px;">
        <MudStack Spacing="4">
            @* Logo y título *@
            <MudStack Spacing="2" AlignItems="AlignItems.Center">
                <MudIcon Icon="@Icons.Material.Filled.Scale" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h4" Align="Align.Center">Control Peso Thiscloud</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary">
                    Inicia sesión para continuar
                </MudText>
            </MudStack>

            <MudDivider />

            @* Botones de autenticación OAuth *@
            <MudStack Spacing="3">
                @* Botón Google OAuth *@
                <MudButton 
                    Variant="Variant.Outlined" 
                    Color="Color.Default"
                    Size="Size.Large"
                    FullWidth="true"
                    StartIcon="@Icons.Custom.Brands.Google"
                    OnClick="LoginWithGoogle"
                    Class="text-transform-none">
                    Continuar con Google
                </MudButton>

                @* Botón LinkedIn OAuth *@
                <MudButton 
                    Variant="Variant.Outlined" 
                    Color="Color.Info"
                    Size="Size.Large"
                    FullWidth="true"
                    StartIcon="@Icons.Custom.Brands.LinkedIn"
                    OnClick="LoginWithLinkedIn"
                    Class="text-transform-none">
                    Continuar con LinkedIn
                </MudButton>
            </MudStack>

            <MudDivider />

            @* Información de privacidad *@
            <MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Secondary">
                Al continuar, aceptas nuestra <MudLink Href="/privacy" Color="Color.Primary">Política de Privacidad</MudLink>
                y <MudLink Href="/terms" Color="Color.Primary">Términos de Servicio</MudLink>
            </MudText>
        </MudStack>
    </MudPaper>
</MudContainer>
