@page "/trends"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ControlPeso.Application.DTOs
@using MudBlazor

<PageTitle>Tendencias - Control Peso</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">Análisis de Tendencias</MudText>

    @if (_isLoading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        <MudGrid>
            <!-- TODO: Implementar análisis de tendencias con ITrendService -->
            <MudItem xs="12">
                <MudPaper Elevation="2" Class="pa-4">
                    <MudText Typo="Typo.h6">Análisis de tendencias próximamente</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Esta funcionalidad requiere implementar ITrendService en la capa de aplicación.
                    </MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>
    }
</MudContainer>
